{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
       {
        "source": "/main",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },      
      {
        "source": "/edit",
        "destination": "/index.html"
      },      
      {
        "source": "/reg",
        "destination": "/index.html"
      }
    ]
  }
}
